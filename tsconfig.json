{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2019",
    "jsx": "preserve",
    "esModuleInterop": true,
    "sourceMap": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "tsoutput",
    "allowJs": true,
    "typeRoots": [
      "frontend/@types"
    ],
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "isolatedModules": true
  },
  "exclude": [
    "frontend/out",
    "frontend/.next",
    "tsoutput",
    "node_modules/**"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
